#!/usr/bin/env python

import os, shutil, random

files = []

print 'Directory contents:', os.listdir('.')

for n in 'structure%s.pdb color%s.dat cell%s.dat'.split():
    old = n % ''
    new = n % '2'
    print 'Copying', old, '->', new
    shutil.copy(old, new)
    files.append(new)

fd = open('weights2.dat', 'w')
r = random.random()
print 'random', r
fd.write(str(r))
fd.close()
files.append('weights2.dat')

cmd = 'tar cvf results.tar %s' % ' '.join(files)
print 'Executing', cmd
os.system(cmd)

